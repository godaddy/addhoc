    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-react": "^7.14.5",
    "@babel/register": "^7.15.3",
    "@types/react": "^16.14.15",
    "assume": "^2.3.0",
    "babel-eslint": "^10.1.0",
    "enzyme": "^3.11.0",
