{
  "name": "addhoc",
  "version": "1.2.1",
  "description": "Handy little helper to create proper HOC functions complete with hoisted statics and forwarded refs",
  "main": "./lib/index",
  "browser": "./lib/index",
  "module": "./index",
  "react-native": "./index",
  "types": "./index.d.ts",
  "scripts": {
    "build": "babel -d lib index.js",
    "prepublishOnly": "npm run build",
    "lint": "eslint --fix *.js",
    "test:types": "tsc --noEmit ./index.d.ts",
    "test:mocha": "nyc mocha --require setup-env test/*.test.js",
    "test": "npm run test:mocha && npm run test:types",
    "posttest": "npm run lint",
    "report-coverage": "nyc report --reporter=lcov"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/godaddy/addhoc.git"
  },
  "keywords": [
    "react",
    "hoc",
    "component",
    "ref"
  ],
  "author": "Jonathan Keslin <github@jonathankeslin.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/godaddy/addhoc/issues"
  },
  "homepage": "https://github.com/godaddy/addhoc#readme",
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@babel/register": "^7.10.5",
    "@types/react": "^16.9.43",
    "assume": "^2.2.0",
    "babel-eslint": "^10.1.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^7.4.0",
    "eslint-config-godaddy-react": "^6.0.0",
    "eslint-plugin-json": "^2.1.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-mocha": "^7.0.1",
    "eslint-plugin-react": "^7.20.3",
    "jsdom": "^16.3.0",
    "mocha": "^8.0.1",
    "nyc": "^15.1.0",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "setup-env": "^1.2.3",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "hoist-non-react-statics": "^3.3.2"
  },
  "peerDependencies": {
    "react": "^16.0.0"
  }
}
