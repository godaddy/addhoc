{
  "name": "addhoc",
  "version": "1.0.2",
  "description": "Handy little helper to create proper HOC functions complete with hoisted statics and forwarded refs",
  "main": "./lib/index",
  "browser": "./lib/index",
  "module": "./index",
  "react-native": "./index",
  "scripts": {
    "build": "babel -d lib index.js",
    "prepublishOnly": "npm run build",
    "lint": "eslint --fix *.js",
    "test": "nyc mocha --require setup-env test/*.test.js",
    "posttest": "npm run lint",
    "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/godaddy/addhoc.git"
  },
  "keywords": [
    "react",
    "hoc",
    "component",
    "ref"
  ],
  "author": "Jonathan Keslin <github@jonathankeslin.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/godaddy/addhoc/issues"
  },
  "homepage": "https://github.com/godaddy/addhoc#readme",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.4.0",
    "assume": "^2.1.0",
    "babel-eslint": "^10.0.1",
    "codecov": "^3.2.0",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.9.1",
    "eslint": "^5.13.0",
    "eslint-config-godaddy-react": "^5.0.0",
    "eslint-plugin-json": "^1.4.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-mocha": "^5.3.0",
    "eslint-plugin-react": "^7.12.4",
    "jsdom": "^14.0.0",
    "mocha": "^6.0.2",
    "nyc": "^13.2.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "setup-env": "^1.2.2"
  },
  "dependencies": {
    "hoist-non-react-statics": "^3.3.0"
  },
  "peerDependencies": {
    "react": "^16.0.0"
  }
}
